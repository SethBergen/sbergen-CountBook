<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sbergen.countbook.AddCounterActivity">

    <EditText
        android:id="@+id/textbox_add_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_add_name"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/button_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Set"
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_add_name"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/textbox_add_initialValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Initial Value"
        android:inputType="number"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_add_initialValue"
        app:layout_constraintTop_toBottomOf="@+id/textbox_add_name" />

    <Button
        android:id="@+id/button_add_initialValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_add_initialValue" />

    <EditText
        android:id="@+id/textbox_add_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Comment (Optional)"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox_add_initialValue"
        app:layout_constraintRight_toLeftOf="@+id/button_add_comment"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Set"
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_add_comment"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="136dp"
        android:layout_height="76dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="Done"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
