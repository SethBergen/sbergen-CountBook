<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sbergen.countbook.EditCounterActivity">

    <EditText
        android:id="@+id/textbox_edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_edit_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textbox_edit_initialValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Initial Value"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_edit_initialValue"
        app:layout_constraintTop_toBottomOf="@+id/textbox_edit_name" />

    <EditText
        android:id="@+id/textbox_edit_currentValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Current Value"
        android:inputType="number"
        android:text="Name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_edit_currentValue"
        app:layout_constraintTop_toBottomOf="@+id/textbox_edit_initialValue" />

    <EditText
        android:id="@+id/textbox_edit_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Comment (Optional)"
        android:inputType="text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_edit_comment"
        app:layout_constraintTop_toBottomOf="@+id/textbox_edit_currentValue" />

    <Button
        android:id="@+id/button_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Change Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_edit_name"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_edit_initialValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Change Init. Val."
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_edit_initialValue"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_edit_currentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Change Curr. Val."
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_edit_currentValue"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_edit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Change Comment"
        app:layout_constraintBaseline_toBaselineOf="@+id/textbox_edit_comment"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="113dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/textbox_display_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_return"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_return" />

    <Button
        android:id="@+id/button_deleteCounter"
        android:layout_width="164dp"
        android:layout_height="66dp"
        android:layout_marginRight="16dp"
        android:text="Delete Counter"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_comment"
        tools:layout_editor_absoluteX="205dp" />
</android.support.constraint.ConstraintLayout>
